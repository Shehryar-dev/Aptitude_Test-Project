@{

    Layout = "_LayoutAdmin1";
}
@model Aptitude_Test.Models.Candidate;

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Update Candidates </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Candidates</a></li>
                <li class="breadcrumb-item active" aria-current="page">Update Candidates</li>
            </ol>
        </nav>
    </div>
    <div class="row">

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
                    <h4 class="card-title">Candidates</h4>

                    <form class="forms-sample" enctype="multipart/form-data" asp-action="cant_edit2" asp-controller="Admin" method="post">
                <input type="hidden" asp-for="CandidateId"  />
                <div class="form-group">
                            <label for="exampleInputName1"> Candidates Name</label>
                    <input type="text" asp-for="FullName" class="form-control" id="exampleInputName1" placeholder="Full Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Location</label>
                    <input type="text" asp-for="Location" class="form-control" id="exampleInputName1" placeholder="Location">
                </div>
                        <div class="form-group">
                            <label for="exampleTextarea1">Description</label>
                            <textarea class="form-control" asp-for="CantDescription" id="exampleTextarea1"  rows="4"></textarea>
                        </div>

                        <div class="form-group">
                            <label>Image upload</label>
                            <div class="input-group col-xs-12">
                                <input type="file" name="file" class="form-control " placeholder="Upload Image">
                                <br />
                            </div>
                            <div>  @Model.ImageUrl <br /> <img src="~/ContentImages/images/@Model.ImageUrl" style="width:110px;object-fit:cover;margin-top:5px;" alt="@Model.ImageUrl" /></div>
                        </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
            </form> 
        </div>
    </div>
</div>



    </div>
</div>
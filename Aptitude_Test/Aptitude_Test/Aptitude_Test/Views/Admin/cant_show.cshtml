@{

    Layout = "_LayoutAdmin1";
}

@model IEnumerable<Aptitude_Test.Models.Candidate>

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Candidates  </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Candidates</a></li>
                <li class="breadcrumb-item active" aria-current="page">Show Candidates</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"> Candidates Records</h4>

                    <table class="table table-striped text-center " >
                        <thead>
                            <tr>
                                <th>
                                    Candidates ID
                                </th>
                                <th>
                                    Candidates name
                                </th>
                                <th>
                                    Candidates Location
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Candidates Image
                                </th>
                                <th>
                                    Record Date
                                </th>
                                <th>
                                     Update
                                </th>
                                <th>
                                     Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @item.CandidateId
                                    </td>
                                    <td>
                                        @item.FullName
                                    </td>
                                    <td>
                                        @item.Location
                                    </td>
                                    <td>
                                        @item.CantDescription
                                    </td>
                                    <td>
                                        <img src="/ContentImages/images/@item.ImageUrl" style="width:76px;border-radius:10%;" alt="@item.ImageUrl" />
                                    </td>
                                    <td>
                                        @item.CreatedDate
                                    </td>
                                    
                                    <td>
                                        <a asp-route-id="@item.CandidateId" asp-controller="Admin" asp-action="cant_edit"
                                           class="btn btn-success">
                                            Update
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger" asp-route-id="@item.CandidateId" asp-action="cant_del" asp-controller="Admin" class="btn btn-danger">
                                            Delete
                                        </a>
                                    </td>

                                </tr>
                            }


                        </tbody>

                     



                       
                    </table>
                </div>
            </div>

        </div>
    
    </div>
</div>
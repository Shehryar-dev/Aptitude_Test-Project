@{

    Layout = "_LayoutAdmin1";
}


@model IEnumerable<Aptitude_Test.Models.Contact>


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Contact  </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Contact</a></li>
                <li class="breadcrumb-item active" aria-current="page">Show Contact</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"> Contact Records</h4>

                    <table class="table table-striped text-center " >
                        <thead>
                            <tr>
                                <th>
                                    Contact ID
                                </th>
                                <th>
                                    Contact name
                                </th>
                                <th>
                                     Email
                                </th>
                                <th>
                                     Phone Number
                                </th>
                                <th>
                                     Address
                                </th>
                                <th>
                                    Messages
                                </th>
                                
                                <th>
                                    User Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @item.ContId
                                    </td>
                                    <td>
                                        @item.ContName
                                    </td>
                                    <td>
                                        @item.ContEmail
                                    </td>
                                    <td>
                                        @item.ContPhone
                                    </td>
                                    <td>
                                        @item.ContAddress
                                    </td> 
                                     <td>
                                        @item.ContMessage
                                    </td> 
                                    
                                    <td>
                                        <a class="btn btn-danger" asp-route-id="@item.ContId" asp-action="contact_del" asp-controller="Admin" class="btn btn-danger">
                                            Delete
                                        </a>
                                    </td>

                                </tr>
                            }


                        </tbody>

                     



                       
                    </table>
                </div>
            </div>

        </div>
    
    </div>
</div>
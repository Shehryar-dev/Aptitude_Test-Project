@{

    Layout = "_LayoutAdmin1";
}


@model IEnumerable<Aptitude_Test.Models.JobApplication>


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> JOB APPLY REQUESTs  </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Job</a></li>
                <li class="breadcrumb-item active" aria-current="page">JOB REQUESTs</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">All JOB REQUESTs</h4>

                    <table class="table table-striped text-center " >
                        <thead>
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Full Name
                                </th>
                                <th>
                                     Email
                                </th>
                                <th>
                                    Login Email
                                </th>
                                <th>
                                     Phone Number
                                </th>
                                <th>
                                     Address
                                </th>
                                <th>
                                    Resume
                                </th>
                                <th>
                                    Messages
                                </th>
                                
                                <th>
                                    User Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @item.JId
                                    </td>
                                    <td>
                                        @item.JFullname
                                    </td>
                                    <td>
                                        @item.JEmail
                                    </td>
                                    <td>
                                        @item.JUser.UserEmail
                                    </td>
                                    <td>
                                        @item.JPhone
                                    </td>
                                    <td>
                                        @item.UserAddress
                                    </td>
                                    <td>
                                        <a href="~/ContentImages/public_resume/@item.JResume" download="@item.JResume">Resume</a>
                                    </td>
                                    <td>
                                        @item.JMessage
                                    </td> 
                                    
                                    <td>
                                        <a class="btn btn-danger" asp-route-id="@item.JId" asp-action="job_app_del" asp-controller="Admin" class="btn btn-danger">
                                            Delete
                                        </a>
                                    </td>

                                </tr>
                            }


                        </tbody>

                     



                       
                    </table>
                </div>
            </div>

        </div>
    
    </div>
</div>
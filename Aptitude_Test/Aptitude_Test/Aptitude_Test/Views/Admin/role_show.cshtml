@{

    Layout = "_LayoutAdmin1";
}

@model IEnumerable<Aptitude_Test.Models.Role>

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Roles </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Role</a></li>
                <li class="breadcrumb-item active" aria-current="page">Show Roles</li>
            </ol>
        </nav>
    </div>
    <div class="row">

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Role Show</h4>
           
            <table class="table table-striped text-center">
                <thead>
                    <tr>
                        <th>
                            Role ID
                        </th>
                        <th>
                            Role name
                        </th>
                        <th>
                           Role Update
                        </th>
                        <th>
                           Role Delete
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model){
                    <tr>
                        <td class="py-1">
                            @item.RoleId
                        </td>
                        <td>
                                @item.RoleName
                        </td>
                       
                        <td>
                            <a class="btn btn-success" asp-route-id="@item.RoleId" asp-action="role_edit" asp-controller="Admin">Update</a>
                        </td>
                        <td>
                                <a class="btn btn-danger" asp-route-id="@item.RoleId" asp-action="role_delete" asp-controller="Admin">Delete</a>
                        </td>
                    </tr>
                    }
                   
                </tbody>
            </table>
        </div>
    </div>
</div>



    </div>
</div>
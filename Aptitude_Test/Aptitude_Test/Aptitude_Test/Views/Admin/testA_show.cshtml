@{

    Layout = "_LayoutAdmin1";
}

@model IEnumerable<Aptitude_Test.Models.Gktest>

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> General Knowledge Test </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Test</a></li>
                <li class="breadcrumb-item active" aria-current="page">Show Test</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"> General Knowledge Test</h4>

                    <table class="table table-striped text-center " >
                        <thead>
                            <tr>
                                <th>
                                   Test  ID
                                </th>
                                <th>
                                    Test Question
                                </th>
                                <th>
                                    Option A
                                </th>
                                <th>
                                    Option B
                                </th>
                                <th>
                                    Option C
                                </th>
                                <th>
                                    Option D
                                </th>

                                <th>
                                    Correct Answer
                                </th>


                                <th>
                                     Update
                                </th>
                                <th class="d-none">
                                     Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        @item.Question
                                    </td>
                                    <td>
                                        @item.OptionA
                                    </td>
                                    <td>
                                        @item.OptionB
                                    </td>
                                    <td>
                                        @item.OptionC
                                    </td>

                                    <td>
                                        @item.OptionD
                                    </td>

                                    <td>
                                        @item.CorrectAnswer
                                    </td>
                                    <td>
                                        <a asp-route-id="@item.Id" asp-controller="Admin" asp-action="testA_edit"
                                           class="btn btn-success">
                                            Update
                                        </a>
                                    </td>
                                    <td class="d-none">
                                        <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="test1_del" asp-controller="Admin" class="btn btn-danger">
                                            Delete
                                        </a>
                                    </td>

                                </tr>
                            }


                        </tbody>

                     



                       
                    </table>
                </div>
            </div>

        </div>
    
    </div>
</div>
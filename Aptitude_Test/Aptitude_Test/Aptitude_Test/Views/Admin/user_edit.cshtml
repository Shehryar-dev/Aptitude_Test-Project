@{

    Layout = "_LayoutAdmin1";
}
@model Aptitude_Test.Models.User;

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> User  </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">User</a></li>
                <li class="breadcrumb-item active" aria-current="page">User Edit</li>
            </ol>
        </nav>
    </div>
    <div class="row">
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
                    <h4 class="card-title"> Update User</h4>

                    <form class="forms-sample" method="post" enctype="multipart/form-data" asp-action="user_edit2" asp-controller="Admin">
                <input type="hidden" asp-for="UserId" />

                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input type="text" asp-for="UserName" class="form-control" id="exampleInputName1" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Email</label>
                    <input type="email" asp-for="UserEmail" class="form-control" id="exampleInputName1" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Password</label>
                            <input type="password" asp-for="UserPassword" class="form-control" id="exampleInputName1" placeholder="Password" value="@Model.UserPassword" required>
                </div>
                <div class="form-group">
                    <label for="exampleSelectGender">Select Role</label>
                    <select class="form-control" id="exampleSelectGender" asp-for="UserRoleId" asp-items="ViewBag.UserRoles" required>
                       
                    </select>
                </div>
                <div class="form-group">
                    <label>File upload</label>
                    <div class="input-group col-xs-12">
                        <input type="file" name="file" class="form-control " placeholder="Upload Image">
                        <br />
                    </div>
                  <div>  @Model.UserImage <br /> <img src="~/assets/images/faces/@Model.UserImage" style="width:110px;object-fit:cover;margin-top:5px;" alt="@Model.UserImage" /></div>
                </div>

                <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
            </form> 
        </div>
    </div>
</div>


    </div>
</div>